{
  "expo": {
    "name": "kalpx",
    "slug": "kalpx",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kalpx",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.app.kalpx"
    },
    "android": {
      "package": "com.kalpx.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/gelica-regular.otf",
            "./assets/fonts/gelica-light.otf",
            "./assets/fonts/gelica-medium.otf",
            "./assets/fonts/gelica-bold.otf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Gelica",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/gelica-light.otf",
                    "weight": 300
                  },
                  {
                    "path": "./assets/fonts/gelica-regular.otf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/gelica-medium.otf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/gelica-bold.otf",
                    "weight": 700
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/gelica-light.otf",
              "./assets/fonts/gelica-regular.otf",
              "./assets/fonts/gelica-medium.otf",
              "./assets/fonts/gelica-bold.otf"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
